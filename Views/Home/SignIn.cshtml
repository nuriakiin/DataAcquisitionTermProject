@model User

    <form method="post" asp-controller="Home" asp-action="SignIn">
        <div asp-validation-summary="All"></div>
       @if (ViewData["UserExist"] != null || ViewData["PassConfirm"] != null ) { 
    <p>@ViewData["UserExist"]<br />@ViewData["PassConfirm"]</p>
       } 
        <div class="form-group">
            <label>Please Enter an Username</label>
            <input class="form-control" asp-for="@Model.Username" placeholder="Username">
        </div>
        <div class="form-group">
            <label for="exampleInputPassword1">Please Enter a Password</label>
            <input type="password" class="form-control" asp-for="@Model.UserPassword" placeholder="Password">
        </div>
        <div class="form-group">
            <label for="password">Confirm Password</label>
            <input type="password" class="form-control" id="password" name="password" placeholder="Password">
        </div>

        <button type="submit" class="btn btn-primary">Sign In</button>
    </form>