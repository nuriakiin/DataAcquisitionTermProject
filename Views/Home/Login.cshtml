@model User

    <form method="post" asp-action="Login">
        <div asp-validation-summary="All"></div>
        @if (ViewData["NamePass"]!=null)
        {
            <p>@ViewData["NamePass"]</p>
        }
        <div class="form-group">
            <label>Username</label>
            <input class="form-control" asp-for="@Model.Username" placeholder="Username">
        </div>
        <div class="form-group">
            <label for="exampleInputPassword1">Password</label>
            <input type="password" class="form-control" asp-for="@Model.UserPassword" placeholder="Password">
        </div>

        <button type="submit" class="btn btn-primary">Login</button>
        <a asp-action="SignIn" class="btn btn-primary">Sign In</a>
    </form>
